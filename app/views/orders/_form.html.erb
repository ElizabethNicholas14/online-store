<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs form-group">
    <%= f.input :name,
                placeholder:'Bob Ross',
                class:'form-control' %>

    <%= f.input :address,
                placeholder: "123 Maple St. \nAnywhere, USA",
                class: 'form-control' %>

    <%= f.input :pay_type,
                collection: Order::PAYMENT_TYPES,
                prompt: "Select a payment method",
                class:'form-control' %>
    <!-- "collection gets you a drop down when you use simple form. If you don't it's collection_select" -->
  </div>
  <div class="form-actions form-group">
    <%= f.submit 'Place Order',
        class: 'btn btn-sm btn-danger' %>
    <%=  %>
  </div>
<% end %>